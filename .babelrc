{
  "presets": [
    "es2015",
    "es2017",
    "stage-1",
    "react",
    "flow"
  ],
  "plugins": [
    "transform-decorators-legacy",
    "transform-runtime",
    "meteor-imports"
  ],
  "env": {
    "coverage": {
      "plugins": [
        ["istanbul", {
          "exclude": [
            "build/meteor/**/*.js",
            "test/**/*.js"
          ]
        }]
      ]
    }
  }
}
